{
  "trailingComma": "all",
  "tabWidth": 4,
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "importOrder": [ 
    "^[react]",
    "^./hooks",
    "^~/icons", 
    "^@(?!/)", 
    "^@/entities",
    "^@/features",
    "^@/widget", 
    "^@/shared", 
    "^./ui", 
    "^[./]" 
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}